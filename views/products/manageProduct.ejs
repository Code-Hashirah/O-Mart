      </div>
      <!-- /.sidebar -->
    </aside>
  </div>
  <div class="col-8">
    <div class="register-box w-75">
      <div class="card card-outline card-primary">
        <div class="card-header text-center">
          <a href="/admin-dashboard" class="h1"><b>Admin</b>Dashboard</a>
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"> Registered Product List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped" style="width:100% ;">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Product</th>
                  <th>Price</th>
                  <th>Brand</th>
                  <th>Description</th>
                  <th>Image</th>
                  <th>Discount</th>
                  <th>Category</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                  <%  if(Products.length>0){
                        for(let Items of Products){  %>
                            <tr>
                                <td><%= Items.id %></td>
                                <td><%= Items.item %></td>
                                <td><%= Items.price %></td>
                                <td><%= Items.brand %></td>
                                <td><%= Items.description%></td>
                                <td><img src="<%= Items.image %>" alt="image"></td>
                                <td><%= Items.discount %></td>
                                <td><%= Items.category %></td>
                                <td>
                                    <div>
                                       <a href="/admin-update/id"> Update</a>
                                     </div>

                                     <div>
                                        <form action="/admin-delete" method="post">
                                            <button type="submit">Delete</button>
                                        </form>
                                     </div>
                            </td>
                              </tr>
                <%     }
                    }  %>
                
               
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
      </div>
    </div>
  </div>
 </div>
