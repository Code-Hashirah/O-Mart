<body>
  <%-include('../includes/user/navbar.ejs') %>
 
<form action="/sign-in" method="post">
  <h1 class="my-4">Login</h1>
<%= JSON.stringify(loginErr)%>
    <div class="mb-3 mt-3">
      <label for="uname" class="form-label">Username:</label>
      <input type="email" class="form-control" id="uname" placeholder="Enter username" name="Email" >
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
      <% for (let errors of loginErr){
        if(errors.param==="Email"){ %>
          <div style="color:red"><%= errors.msg %> <%=validError.msg %></div>
      <%  }
      } %>
    
    </div>
    <div class="mb-3">
      <label for="pwd" class="form-label">Password:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="Password" >
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
      <% for (let errors of loginErr){
        if(errors.param==="Password"){ %>
          <div style="color:red"><%= errors.msg %></div>
      <%  }
      } %>
    </div>
   
    <div class="form-check mb-3">
      <!-- <input class="form-check-input" type="checkbox" id="myCheck" name="remember" > -->
      <!-- <label class="form-check-label" for="myCheck">I agree to the terms and conditions.</label> -->
      <div class="valid-feedback">Valid.</div>
      <!-- <div class="invalid-feedback">Keep me signed in.</div> -->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <div class="my-3"> <a href="/reset-password" class="btn btn-success"> Reset Password</a></div>
    <div class="my-3"> <a href="/forgot-password" class="btn btn-danger"> Forgot Password</a></div>

  </form>

  <%-include('../includes/user/footer.ejs') %>
</body>